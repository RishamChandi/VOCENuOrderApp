@model List<VOCENuOrderApp.Models.ProductSyncLog>

@{
    ViewBag.Title = "Product Sync Logs";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var brandList = ViewBag.BrandList as List<string>;
    int maxPagesToShow = 15;
    int startPage = Math.Max(1, currentPage - (maxPagesToShow / 2));
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow) { startPage = Math.Max(1, endPage - maxPagesToShow + 1); }
}

<h1 class="page-heading">Product Sync Logs</h1>
<p class="page-subheading">View and filter product synchronization history between Xoro and NuOrder.</p>

<div class="card log-card mb-4">
    <form method="get" class="filter-bar">
        <label>
            Status
            <select name="statusFilter" class="form-select">
                <option value="">All</option>
                <option value="Success" selected="@(ViewBag.StatusFilter == "Success")">Success</option>
                <option value="Failed" selected="@(ViewBag.StatusFilter == "Failed")">Failed</option>
            </select>
        </label>
        <label>
            Base Part
            <input type="text" name="basePartFilter" value="@ViewBag.BasePartFilter" class="form-control" placeholder="e.g. S0284" />
        </label>
        <label>
            Color
            <input type="text" name="colorFilter" value="@ViewBag.ColorFilter" class="form-control" placeholder="Color" />
        </label>
        <label>
            Brand
            <select name="brandFilter" class="form-select">
                <option value="">All</option>
                @if (brandList != null)
                {
                    foreach (var brand in brandList)
                    {
                        <option value="@brand" selected="@(ViewBag.BrandFilter == brand)">@brand</option>
                    }
                }
            </select>
        </label>
        <label>
            From
            <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
        </label>
        <label>
            To
            <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
        </label>
        <button type="submit" class="btn btn-primary btn-sm">Filter</button>
        <a href="@Url.Action("ExportToCsv", new { statusFilter = ViewBag.StatusFilter, basePartFilter = ViewBag.BasePartFilter, colorFilter = ViewBag.ColorFilter, brandFilter = ViewBag.BrandFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })" class="btn btn-outline-secondary btn-sm">Export CSV</a>
    </form>

    <div class="table-responsive">
        <table class="table table-log table-hover">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Base Part</th>
                    <th>Color</th>
                    <th>Status</th>
                    <th>Brand</th>
                    <th>Message</th>
                    <th>Request</th>
                    <th>Response</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.BasePartNumber</td>
                        <td>@log.ColorName</td>
                        <td>
                            <span class="badge @(log.SyncStatus == "Success" ? "bg-success" : "bg-danger")">@log.SyncStatus</span>
                        </td>
                        <td>@log.Brand</td>
                        <td>@log.Message</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary" title="Copy request JSON" onclick="copyJsonAjax(@log.Id, true, this)">Copy</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Copy response JSON" onclick="copyJsonAjax(@log.Id, false, this)">Copy</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter = ViewBag.StatusFilter, basePartFilter = ViewBag.BasePartFilter, colorFilter = ViewBag.ColorFilter, brandFilter = ViewBag.BrandFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, page = currentPage - 1 })">Previous</a>
            </li>
        }
        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter = ViewBag.StatusFilter, basePartFilter = ViewBag.BasePartFilter, colorFilter = ViewBag.ColorFilter, brandFilter = ViewBag.BrandFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, page = i })">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter = ViewBag.StatusFilter, basePartFilter = ViewBag.BasePartFilter, colorFilter = ViewBag.ColorFilter, brandFilter = ViewBag.BrandFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, page = currentPage + 1 })">Next</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
<script>
    function fallbackCopy(text) {
        var ta = document.createElement('textarea');
        ta.value = text;
        ta.style.position = 'fixed';
        ta.style.left = '-9999px';
        ta.style.top = '-9999px';
        document.body.appendChild(ta);
        ta.focus();
        ta.select();
        var ok = false;
        try { ok = document.execCommand('copy'); } catch (_) {}
        document.body.removeChild(ta);
        return ok;
    }

    async function copyJsonAjax(id, isRequest, btn) {
        var orig = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i class="bi bi-hourglass-split"></i>';
        try {
            var baseUrlReq = '@Url.Action("GetRequestJson", "ProductSyncLog")';
            var baseUrlResp = '@Url.Action("GetResponseJson", "ProductSyncLog")';
            var url = (isRequest ? baseUrlReq : baseUrlResp) + '?id=' + id;
            var res = await fetch(url, { credentials: 'same-origin', redirect: 'follow' });
            var contentType = res.headers.get('content-type') || '';
            if (contentType.indexOf('text/html') !== -1) {
                btn.innerHTML = 'Auth err';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
                return;
            }
            if (res.status === 204 || res.status === 404) {
                btn.innerHTML = 'Empty';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
                return;
            }
            if (!res.ok) {
                btn.innerHTML = 'Error ' + res.status;
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
                return;
            }
            var text = await res.text();
            if (!text || !text.trim()) {
                btn.innerHTML = 'Empty';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
                return;
            }
            var copied = false;
            try {
                if (navigator.clipboard) {
                    await navigator.clipboard.writeText(text);
                    copied = true;
                }
            } catch (_) {}
            if (!copied) { copied = fallbackCopy(text); }
            btn.innerHTML = copied ? '<i class="bi bi-check-lg"></i> Copied' : 'Failed';
            setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
        } catch (e) {
            btn.innerHTML = 'Error';
            setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
        }
    }
</script>
}
