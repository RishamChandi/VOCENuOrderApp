@model List<VOCENuOrderApp.Controllers.ReplenishmentSyncLogController.ReplenLogRow>
@{
    ViewBag.Title = "Replenishment Sync Logs";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
}
<h2>Replenishment Sync Logs</h2>
<form method="get" class="mb-3 d-flex gap-2 align-items-end flex-wrap">
    <label>
        Status:
        <select name="statusFilter" class="form-select">
            <option value="">All</option>
            <option value="Success" selected="@(ViewBag.StatusFilter == "Success")">Success</option>
            <option value="Failed" selected="@(ViewBag.StatusFilter == "Failed")">Failed</option>
            <option value="Submitted" selected="@(ViewBag.StatusFilter == "Submitted")">Submitted</option>
        </select>
    </label>
    <label>
        Style (Base Part):
        <input type="text" name="styleFilter" value="@ViewBag.StyleFilter" class="form-control" placeholder="Enter style/base part" />
    </label>
    <label>
        Color:
        <input type="text" name="colorFilter" value="@ViewBag.ColorFilter" class="form-control" placeholder="Enter color" />
    </label>
    <label>
        From:
        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
    </label>
    <label>
        To:
        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
    </label>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a class="btn btn-secondary" href="@Url.Action("ExportCsv", new { statusFilter = ViewBag.StatusFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, styleFilter = ViewBag.StyleFilter, colorFilter = ViewBag.ColorFilter })">Export CSV</a>
</form>
<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Base Part</th>
            <th>Color</th>
            <th>SKU</th>
            <th>ATS</th>
            <th>PO Qty</th>
            <th>Prebook</th>
            <th>Status</th>
            <th>Message</th>
            <th>Client</th>
            <th>Request</th>
            <th>Response</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            // In thin row we don't have full JSON fields; show placeholders
            string reqShort = "";
            string respShort = "";
            <tr class="@(log.Status == "Failed" ? "table-danger" : (log.Status == "Success" ? "table-success" : ""))">
                <td>@log.Timestamp.ToLocalTime()</td>
                <td>@log.BasePartNumber</td>
                <td>@log.Color</td>
                <td>@log.SkuId</td>
                <td>@log.ATS</td>
                <td>@log.POQty</td>
                <td>@(log.Prebook ? "Yes" : "No")</td>
                <td>@log.Status</td>
                <td>@log.Message</td>
                <td>@log.Client</td>
                <td>
                    <button type="button" class="btn btn-sm btn-outline-primary" title="Copy full request JSON" onclick="copyJsonAjax(@log.Id, true)">Copy</button>
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Copy full response JSON" onclick="copyJsonAjax(@log.Id, false)">Copy</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=currentPage-1 })">Previous</a>
            </li>
        }
        @for (int i=1;i<=totalPages;i++)
        {
            <li class="page-item @(i==currentPage?"active":"")">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=i })">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=currentPage+1 })">Next</a>
            </li>
        }
    </ul>
</nav>

<script>
    async function copyJsonAjax(id, isRequest) {
        try {
            const baseUrlReq = '@Url.Action("GetRequestJson")';
            const baseUrlResp = '@Url.Action("GetResponseJson")';
            const url = (isRequest ? baseUrlReq : baseUrlResp) + `?id=${id}`;
            const res = await fetch(url, { headers: { 'Accept': 'application/json' } });
            if (!res.ok) return;
            const text = await res.text();
            if (!text) return;
            if (navigator.clipboard && navigator.clipboard.writeText) {
                await navigator.clipboard.writeText(text);
            } else {
                legacyCopy(text);
            }
        } catch (e) { /* ignore */ }
        function legacyCopy(t) {
            var ta = document.createElement('textarea');
            ta.style.position = 'fixed';
            ta.style.opacity = '0';
            ta.value = t;
            document.body.appendChild(ta);
            ta.focus();
            ta.select();
            try { document.execCommand('copy'); } finally { document.body.removeChild(ta); }
        }
    }
</script>
