@model List<VOCENuOrderApp.Controllers.ReplenishmentSyncLogController.ReplenLogRow>
@{
    ViewBag.Title = "Replenishment Sync Logs";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    int maxPagesToShow = 15;
    int startPage = Math.Max(1, currentPage - (maxPagesToShow / 2));
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow) { startPage = Math.Max(1, endPage - maxPagesToShow + 1); }
}

<h1 class="page-heading">Replenishment Sync Logs</h1>
<p class="page-subheading">View and filter replenishment synchronization records.</p>

<div class="card log-card mb-4">
    <form method="get" class="filter-bar">
        <label>
            Status
            <select name="statusFilter" class="form-select">
                <option value="">All</option>
                <option value="Success" selected="@(ViewBag.StatusFilter == "Success")">Success</option>
                <option value="Failed" selected="@(ViewBag.StatusFilter == "Failed")">Failed</option>
                <option value="Submitted" selected="@(ViewBag.StatusFilter == "Submitted")">Submitted</option>
            </select>
        </label>
        <label>
            Style (Base Part)
            <input type="text" name="styleFilter" value="@ViewBag.StyleFilter" class="form-control" placeholder="e.g. S0284" />
        </label>
        <label>
            Color
            <input type="text" name="colorFilter" value="@ViewBag.ColorFilter" class="form-control" placeholder="Color" />
        </label>
        <label>
            From
            <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
        </label>
        <label>
            To
            <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
        </label>
        <button type="submit" class="btn btn-primary btn-sm">Filter</button>
        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("ExportCsv", new { statusFilter = ViewBag.StatusFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, styleFilter = ViewBag.StyleFilter, colorFilter = ViewBag.ColorFilter })">Export CSV</a>
    </form>

    <div class="table-responsive">
        <table class="table table-log table-hover">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Base Part</th>
                    <th>Color</th>
                    <th>SKU</th>
                    <th>ATS</th>
                    <th>PO Qty</th>
                    <th>Prebook</th>
                    <th>Status</th>
                    <th>Message</th>
                    <th>Client</th>
                    <th>Request</th>
                    <th>Response</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.BasePartNumber</td>
                        <td>@log.Color</td>
                        <td>@log.SkuId</td>
                        <td>@log.ATS</td>
                        <td>@log.POQty</td>
                        <td>
                            @if (log.Prebook)
                            {
                                <span class="badge bg-warning text-dark">Yes</span>
                            }
                            else
                            {
                                <span class="text-muted">No</span>
                            }
                        </td>
                        <td>
                            <span class="badge @(log.Status == "Success" ? "bg-success" : log.Status == "Failed" ? "bg-danger" : "bg-secondary")">@log.Status</span>
                        </td>
                        <td>@log.Message</td>
                        <td>@log.Client</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary" title="Copy request JSON" onclick="copyJsonAjax(@log.Id, true)">Copy</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Copy response JSON" onclick="copyJsonAjax(@log.Id, false)">Copy</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=currentPage-1 })">Previous</a>
            </li>
        }
        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=i })">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { statusFilter=ViewBag.StatusFilter, fromDate=ViewBag.FromDate, toDate=ViewBag.ToDate, styleFilter=ViewBag.StyleFilter, colorFilter=ViewBag.ColorFilter, page=currentPage+1 })">Next</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
<script>
    async function copyJsonAjax(id, isRequest) {
        try {
            const baseUrlReq = '@Url.Action("GetRequestJson")';
            const baseUrlResp = '@Url.Action("GetResponseJson")';
            const url = (isRequest ? baseUrlReq : baseUrlResp) + `?id=${id}`;
            const res = await fetch(url, { headers: { 'Accept': 'application/json' } });
            if (!res.ok) return;
            const text = await res.text();
            if (!text) return;
            if (navigator.clipboard && navigator.clipboard.writeText) {
                await navigator.clipboard.writeText(text);
            } else {
                var ta = document.createElement('textarea');
                ta.style.position = 'fixed'; ta.style.opacity = '0'; ta.value = text;
                document.body.appendChild(ta); ta.focus(); ta.select();
                try { document.execCommand('copy'); } finally { document.body.removeChild(ta); }
            }
        } catch (e) { /* ignore */ }
    }
</script>
}
