@model List<VOCENuOrderApp.Controllers.ReplenishmentSyncLogController.ReplenLogRow>
@{
    ViewBag.Title = "Replenishment Sync Logs";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalCount = (int)ViewBag.TotalCount;
    int maxPagesToShow = 15;
    int startPage = Math.Max(1, currentPage - (maxPagesToShow / 2));
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow) { startPage = Math.Max(1, endPage - maxPagesToShow + 1); }

    var allFilters = new Dictionary<string, object?>
    {
        { "statusFilter", ViewBag.StatusFilter },
        { "invTypeFilter", ViewBag.InvTypeFilter },
        { "sizeFilter", ViewBag.SizeFilter },
        { "skuFilter", ViewBag.SkuFilter },
        { "fromDate", ViewBag.FromDate },
        { "toDate", ViewBag.ToDate },
        { "styleFilter", ViewBag.StyleFilter },
        { "colorFilter", ViewBag.ColorFilter }
    };
}

<div class="d-flex justify-content-between align-items-start mb-2">
    <div>
        <h1 class="page-heading mb-0">Replenishment Sync Logs</h1>
        <p class="page-subheading">View and filter replenishment synchronization records.</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <form method="post" asp-action="TriggerSync" class="d-flex gap-1 align-items-center">
            <input type="text" name="basePart" placeholder="e.g. S0284L" class="form-control form-control-sm" style="width:120px;" required />
            <button type="submit" class="btn btn-warning btn-sm text-nowrap" onclick="return confirm('Run replenishment sync for this style now?')">
                <i class="bi bi-play-fill"></i> Sync Now
            </button>
        </form>
        <span class="badge bg-secondary fs-6">@totalCount.ToString("N0") records</span>
    </div>
</div>

@if (TempData["SyncMessage"] is string syncMsg)
{
    <div class="alert @(syncMsg.Contains("failed") ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
        <i class="bi bi-info-circle me-1"></i> @syncMsg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card log-card mb-4">
    <form method="get" class="filter-bar flex-wrap">
        <label>
            Status
            <select name="statusFilter" class="form-select form-select-sm">
                <option value="">All</option>
                <option value="Success" selected="@(ViewBag.StatusFilter == "Success")">Success</option>
                <option value="Failed" selected="@(ViewBag.StatusFilter == "Failed")">Failed</option>
                <option value="Submitted" selected="@(ViewBag.StatusFilter == "Submitted")">Submitted</option>
            </select>
        </label>
        <label>
            Inv. Type
            <select name="invTypeFilter" class="form-select form-select-sm">
                <option value="">All</option>
                <option value="Immediate" selected="@(ViewBag.InvTypeFilter == "Immediate")">Immediate</option>
                <option value="Future" selected="@(ViewBag.InvTypeFilter == "Future")">Future</option>
                <option value="Prebook" selected="@(ViewBag.InvTypeFilter == "Prebook")">Prebook</option>
                <option value="Bulk" selected="@(ViewBag.InvTypeFilter == "Bulk")">Bulk</option>
            </select>
        </label>
        <label>
            Size
            <input type="text" name="sizeFilter" value="@ViewBag.SizeFilter" class="form-control form-control-sm" placeholder="e.g. 8" style="max-width:80px;" />
        </label>
        <label>
            SKU ID
            <input type="text" name="skuFilter" value="@ViewBag.SkuFilter" class="form-control form-control-sm" placeholder="e.g. 68acb00b..." style="max-width:160px;" />
        </label>
        <label>
            Style (Base Part)
            <input type="text" name="styleFilter" value="@ViewBag.StyleFilter" class="form-control form-control-sm" placeholder="e.g. S0284" />
        </label>
        <label>
            Color
            <input type="text" name="colorFilter" value="@ViewBag.ColorFilter" class="form-control form-control-sm" placeholder="Color" />
        </label>
        <label>
            From
            <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control form-control-sm" />
        </label>
        <label>
            To
            <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control form-control-sm" />
        </label>
        <div class="d-flex gap-1 align-self-end">
            <button type="submit" class="btn btn-primary btn-sm">Filter</button>
            <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index")">Clear</a>
            <a class="btn btn-outline-success btn-sm" href="@Url.Action("ExportCsv", allFilters)">
                <i class="bi bi-download"></i> CSV
            </a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-log table-hover mb-0">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Base Part</th>
                    <th>Color</th>
                    <th>Size</th>
                    <th>Type</th>
                    <th>SKU</th>
                    <th>ATS</th>
                    <th>PO Qty</th>
                    <th>Prebook</th>
                    <th>Status</th>
                    <th>Message</th>
                    <th>Client</th>
                    <th>Request</th>
                    <th>Response</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td class="text-nowrap">@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.BasePartNumber</td>
                        <td>@log.Color</td>
                        <td>@log.Size</td>
                        <td>
                            @if (!string.IsNullOrEmpty(log.InventoryType))
                            {
                                var cls = log.InventoryType switch
                                {
                                    "Immediate" => "bg-info text-dark",
                                    "Future" => "bg-primary",
                                    "Prebook" => "bg-warning text-dark",
                                    "Bulk" => "bg-secondary",
                                    _ => "bg-light text-dark"
                                };
                                <span class="badge @cls">@log.InventoryType</span>
                            }
                        </td>
                        <td>@log.SkuId</td>
                        <td>@log.ATS</td>
                        <td>@log.POQty</td>
                        <td>
                            @if (log.Prebook)
                            {
                                <span class="badge bg-warning text-dark">Yes</span>
                            }
                            else
                            {
                                <span class="text-muted">No</span>
                            }
                        </td>
                        <td>
                            <span class="badge @(log.Status == "Success" ? "bg-success" : log.Status == "Failed" ? "bg-danger" : "bg-secondary")">@log.Status</span>
                        </td>
                        <td>@log.Message</td>
                        <td>@log.Client</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary" title="Copy request JSON" onclick="copyJsonAjax(@log.Id, true, this)">Copy</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Copy response JSON" onclick="copyJsonAjax(@log.Id, false, this)">Copy</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new Dictionary<string, object?>(allFilters) { ["page"] = currentPage - 1 })">Previous</a>
                </li>
            }
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new Dictionary<string, object?>(allFilters) { ["page"] = i })">@i</a>
                </li>
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new Dictionary<string, object?>(allFilters) { ["page"] = currentPage + 1 })">Next</a>
                </li>
            }
        </ul>
    </nav>
}

@section Scripts {
<script>
    function fallbackCopy(text) {
        var ta = document.createElement('textarea');
        ta.value = text;
        ta.style.position = 'fixed';
        ta.style.left = '-9999px';
        ta.style.top = '-9999px';
        document.body.appendChild(ta);
        ta.focus();
        ta.select();
        var ok = false;
        try { ok = document.execCommand('copy'); } catch (_) {}
        document.body.removeChild(ta);
        return ok;
    }

    async function copyJsonAjax(id, isRequest, btn) {
        var orig = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i class="bi bi-hourglass-split"></i>';
        try {
            var baseUrlReq = '@Url.Action("GetRequestJson")';
            var baseUrlResp = '@Url.Action("GetResponseJson")';
            var url = (isRequest ? baseUrlReq : baseUrlResp) + '?id=' + id;
            var res = await fetch(url, { credentials: 'same-origin', redirect: 'follow' });
            var contentType = res.headers.get('content-type') || '';
            if (contentType.indexOf('text/html') !== -1) {
                btn.innerHTML = 'Auth err';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
                return;
            }
            if (res.status === 204 || res.status === 404) {
                btn.innerHTML = 'Empty';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
                return;
            }
            if (!res.ok) {
                btn.innerHTML = 'Error ' + res.status;
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
                return;
            }
            var text = await res.text();
            if (!text || !text.trim()) {
                btn.innerHTML = 'Empty';
                setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
                return;
            }
            var copied = false;
            try {
                if (navigator.clipboard) {
                    await navigator.clipboard.writeText(text);
                    copied = true;
                }
            } catch (_) {}
            if (!copied) { copied = fallbackCopy(text); }
            btn.innerHTML = copied ? '<i class="bi bi-check-lg"></i> Copied' : 'Failed';
            setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 1500);
        } catch (e) {
            btn.innerHTML = 'Error';
            setTimeout(function() { btn.innerHTML = orig; btn.disabled = false; }, 2000);
        }
    }
</script>
}
