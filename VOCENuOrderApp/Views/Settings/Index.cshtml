@using VOCENuOrderApp.Controllers
@{
    ViewData["Title"] = "Settings";
    var jobs = ViewBag.HangfireJobs as List<HangfireJobInfo> ?? new List<HangfireJobInfo>();
    bool autoClean = ViewBag.AutoCleanLogs ?? false;
    int autoCleanDays = ViewBag.AutoCleanLogsDays ?? 14;
}

<h1 class="page-heading">Settings</h1>
<p class="page-subheading">Connection details, job configuration, and maintenance settings.</p>

@if (TempData["SettingsMessage"] is string msg)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i> @msg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row g-4">
    <!-- Log Maintenance -->
    <div class="col-lg-6">
        <div class="settings-card card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-trash3 text-danger"></i> Log Maintenance
            </div>
            <div class="card-body">
                <form method="post" asp-action="UpdateAutoClean">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <strong>Auto-cleanup old logs</strong>
                            <div class="text-muted" style="font-size:.85rem">
                                Automatically delete replenishment and product sync logs older than the configured retention period. Runs daily at midnight UTC.
                            </div>
                        </div>
                        <div class="form-check form-switch ms-3">
                            <input class="form-check-input" type="checkbox" role="switch" id="autoCleanToggle"
                                   name="enabled" value="true" @(autoClean ? "checked" : "") style="transform:scale(1.3);" />
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-auto">
                            <label for="autoCleanDays" class="form-label mb-0" style="font-size:.85rem">Retention (days)</label>
                            <input type="number" class="form-control form-control-sm" id="autoCleanDays"
                                   name="days" value="@autoCleanDays" min="1" max="365" style="width:100px;" />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-save me-1"></i>Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- NuOrder Connection -->
    <div class="col-lg-6">
        <div class="settings-card card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-cloud text-primary"></i> NuOrder Connection
            </div>
            <div class="card-body">
                <div class="setting-row">
                    <span class="setting-label">Base URL</span>
                    <span class="setting-value">@ViewBag.NuOrderBaseUrl</span>
                </div>
                <div class="setting-row">
                    <span class="setting-label">Consumer Key</span>
                    <span class="setting-value">@ViewBag.NuOrderConsumerKey</span>
                </div>
                <div class="setting-row">
                    <span class="setting-label">Token</span>
                    <span class="setting-value">@ViewBag.NuOrderToken</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Xoro Connection -->
    <div class="col-lg-6">
        <div class="settings-card card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-hdd-network text-success"></i> Xoro Connection
            </div>
            <div class="card-body">
                <div class="setting-row">
                    <span class="setting-label">Base URL</span>
                    <span class="setting-value">@ViewBag.XoroBaseUrl</span>
                </div>
                <div class="setting-row">
                    <span class="setting-label">Client ID</span>
                    <span class="setting-value">@ViewBag.XoroClientId</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Database -->
    <div class="col-lg-6">
        <div class="settings-card card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-database text-warning"></i> Database
            </div>
            <div class="card-body">
                <div class="setting-row">
                    <span class="setting-label">Server</span>
                    <span class="setting-value">@ViewBag.DbServer</span>
                </div>
                <div class="setting-row">
                    <span class="setting-label">Database</span>
                    <span class="setting-value">@ViewBag.DbName</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Hangfire Jobs -->
    <div class="col-12">
        <div class="settings-card card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-clock-history text-info"></i> Hangfire Recurring Jobs
            </div>
            <div class="card-body p-0">
                @if (jobs.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-log mb-0">
                            <thead>
                                <tr>
                                    <th>Job</th>
                                    <th>Schedule</th>
                                    <th>Last Run</th>
                                    <th>Next Run</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in jobs)
                                {
                                    <tr>
                                        <td>@job.Id</td>
                                        <td><code>@job.Cron</code></td>
                                        <td>@(job.LastExecution?.ToLocalTime().ToString("g") ?? "Never")</td>
                                        <td>@(job.NextExecution?.ToLocalTime().ToString("g") ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3 text-muted">No recurring jobs registered.</div>
                }
            </div>
        </div>
    </div>
</div>
