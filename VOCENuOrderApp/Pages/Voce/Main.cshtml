@page "/Voce/Main"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Linq
@model VOCENuOrderApp.Pages.Voce.MainModel
@{
    ViewData["Title"] = "VOCE Sync Logs";
    var startPage = Math.Max(1, Model.CurrentPage - 2);
    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
    Func<string, string> statusClass = status => status switch
    {
        "Failed" => "danger",
        "Submitted" => "secondary",
        _ => "success"
    };
}

<h1 class="page-heading">VOCE Sync Logs</h1>
<p class="page-subheading">Focused view of VOCE replenishment job output across Hangfire schedules.</p>

<form method="get" class="card log-card mb-4">
    <div class="card-body">
    <div class="row g-3 align-items-end">
        <div class="col-sm-6 col-lg-2">
            <label class="form-label fw-semibold">Status</label>
            <select name="StatusFilter" class="form-select">
                <option value="">All statuses</option>
                @foreach (var option in VOCENuOrderApp.Pages.Voce.MainModel.StatusOptions)
                {
                    if (string.Equals(Model.StatusFilter, option, StringComparison.OrdinalIgnoreCase))
                    {
                        <option value="@option" selected>@option</option>
                    }
                    else
                    {
                        <option value="@option">@option</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-6 col-lg-2">
            <label class="form-label fw-semibold">Base part</label>
            <input type="text" name="StyleFilter" value="@Model.StyleFilter" class="form-control" placeholder="e.g. S0284" />
        </div>
        <div class="col-sm-6 col-lg-2">
            <label class="form-label fw-semibold">Color</label>
            <input type="text" name="ColorFilter" value="@Model.ColorFilter" class="form-control" placeholder="Color prefix" />
        </div>
        <div class="col-sm-6 col-lg-2">
            <label class="form-label fw-semibold">From</label>
            <input type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd") ?? string.Empty)" class="form-control" />
        </div>
        <div class="col-sm-6 col-lg-2">
            <label class="form-label fw-semibold">To</label>
            <input type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd") ?? string.Empty)" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Apply filters</button>
        </div>
        <div class="col-auto">
            <a class="btn btn-outline-secondary" asp-page="/Voce/Main">Reset</a>
        </div>
    </div>
    </div>
</form>

<div class="d-flex flex-wrap justify-content-between align-items-center mb-2 gap-2">
    <div>
        <span class="text-muted">Total results: @Model.TotalRecords</span>
        <span class="text-muted ms-3">Page @Model.CurrentPage of @Model.TotalPages</span>
    </div>
    <div>
        <a class="btn btn-outline-secondary"
           asp-page-handler="Export"
           asp-route-StatusFilter="@Model.StatusFilter"
           asp-route-StyleFilter="@Model.StyleFilter"
           asp-route-ColorFilter="@Model.ColorFilter"
           asp-route-FromDate="@Model.FromDateRouteValue"
           asp-route-ToDate="@Model.ToDateRouteValue">
            Export CSV
        </a>
    </div>
</div>

@if (!Model.Logs.Any())
{
    <div class="alert alert-info">No VOCE logs found for the selected filters.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-log table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Timestamp (local)</th>
                    <th scope="col">Base part</th>
                    <th scope="col">Color</th>
                    <th scope="col">SKU</th>
                    <th scope="col">ATS</th>
                    <th scope="col">PO Qty</th>
                    <th scope="col">Prebook</th>
                    <th scope="col">Status</th>
                    <th scope="col">Message</th>
                    <th scope="col" class="text-end">Request</th>
                    <th scope="col" class="text-end">Response</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.BasePartNumber</td>
                        <td>@log.Color</td>
                        <td>@log.SkuId</td>
                        <td>@(log.ATS?.ToString("0.##") ?? "-")</td>
                        <td>@(log.POQty?.ToString("0.##") ?? "-")</td>
                        <td>
                            @if (log.Prebook)
                            {
                                <span class="badge bg-warning text-dark">Yes</span>
                            }
                            else
                            {
                                <span class="text-muted">No</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-@statusClass(log.Status)">@log.Status</span>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(log.Message))
                            {
                                <span title="@log.Message">@log.Message</span>
                            }
                        </td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-primary" title="Copy request JSON" onclick="copyJsonAjax(@log.Id, true)">Copy</button>
                        </td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Copy response JSON" onclick="copyJsonAjax(@log.Id, false)">Copy</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="VOCE log pages" class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-page="/Voce/Main"
                   asp-route-StatusFilter="@Model.StatusFilter"
                   asp-route-StyleFilter="@Model.StyleFilter"
                   asp-route-ColorFilter="@Model.ColorFilter"
                   asp-route-FromDate="@Model.FromDateRouteValue"
                   asp-route-ToDate="@Model.ToDateRouteValue"
                   asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link"
                       asp-page="/Voce/Main"
                       asp-route-StatusFilter="@Model.StatusFilter"
                       asp-route-StyleFilter="@Model.StyleFilter"
                       asp-route-ColorFilter="@Model.ColorFilter"
                       asp-route-FromDate="@Model.FromDateRouteValue"
                       asp-route-ToDate="@Model.ToDateRouteValue"
                       asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-page="/Voce/Main"
                   asp-route-StatusFilter="@Model.StatusFilter"
                   asp-route-StyleFilter="@Model.StyleFilter"
                   asp-route-ColorFilter="@Model.ColorFilter"
                   asp-route-FromDate="@Model.FromDateRouteValue"
                   asp-route-ToDate="@Model.ToDateRouteValue"
                   asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        async function copyJsonAjax(id, isRequest) {
            try {
                const reqUrl = '@Url.Action("GetRequestJson", "ReplenishmentSyncLog")';
                const respUrl = '@Url.Action("GetResponseJson", "ReplenishmentSyncLog")';
                const target = (isRequest ? reqUrl : respUrl) + `?id=${id}`;
                const response = await fetch(target, { headers: { 'Accept': 'application/json' } });
                if (!response.ok) {
                    alert('No payload found for this log entry.');
                    return;
                }
                const text = await response.text();
                if (!text) {
                    alert('Empty payload.');
                    return;
                }
                if (navigator.clipboard?.writeText) {
                    await navigator.clipboard.writeText(text);
                } else {
                    const area = document.createElement('textarea');
                    area.value = text;
                    area.style.position = 'fixed';
                    area.style.opacity = '0';
                    document.body.appendChild(area);
                    area.focus();
                    area.select();
                    document.execCommand('copy');
                    document.body.removeChild(area);
                }
            } catch (err) {
                console.error(err);
            }
        }
    </script>
}
