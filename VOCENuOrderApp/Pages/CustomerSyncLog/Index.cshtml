@page
@model VOCENuOrderApp.Pages.CustomerSyncLog.IndexModel
@{
    ViewData["Title"] = "Customer Sync Logs";
}

<h1>Customer Sync Logs</h1>

<form method="get">
    <input type="text" name="client" value="@Model.FilterClient" placeholder="Client (e.g., VOCE)" />
    <input type="text" name="code" value="@Model.FilterCode" placeholder="Customer Code" />
    <input type="text" name="status" value="@Model.FilterStatus" placeholder="Status (Success/Failed)" />
    <button type="submit">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Timestamp (UTC)</th>
            <th>Client</th>
            <th>Customer Code</th>
            <th>Customer Name</th>
            <th>Status</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
@foreach (var log in Model.Logs)
{
        <tr>
            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@log.Client</td>
            <td>@log.CustomerCode</td>
            <td>@log.CustomerName</td>
            <td>@log.SyncStatus</td>
            <td>@log.Message</td>
        </tr>
}
    </tbody>
</table>
